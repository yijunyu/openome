<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
<extension point="core.convertor">
		<convertor id="Reasoning with Goal Model (SAT)" 
      		class="edu.toronto.cs.openome.evaluation.convertor.Reasoning_GoalModel"
            input="oom" output="sat.oom"/>
   </extension>
   <extension point="org.eclipse.ui.popupMenus">
        <objectContribution
            objectClass="org.eclipse.core.resources.IFile"
            nameFilter="*.oom"
            id="openome_model">
         <menu
               label="Reasoning the Goal Model"
               path="additions"
               id="object">
            <separator
                  name="reasoning">
            </separator>
         </menu>
         <action
               class="edu.toronto.cs.openome.evaluation.action.ReasoningAction"
               icon="icons/goal.gif"
               id="ReasoningAction"
               label="with SAT solver"
               menubarPath="object/reasoning"
               tooltip="top down reasoning">
         </action>         
         <action
               class="action.QueryAction"
               icon="icons/goal.gif"
               id="QueryAction"
               label="Show configuration"
               menubarPath="object/reasoning"
               tooltip="show variability configuration">
         </action>         
      </objectContribution>
      
   </extension>

</plugin>
