<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension point="core.convertor">
      <convertor id="Q7 to Goal Model" class="convertor.Q7_GoalModel"
            input="q7" output="goalmodel"/>
      <convertor id="Reasoning with Goal Model (SAT)" 
      		class="convertor.Reasoning_GoalModel"
            input="goalmodel" output="sat.goalmodel"/>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IFile"
            nameFilter="*.q7"
            id="q7">
         <menu
               label="Convert the Q7 representation into"
               path="additions"
               id="menu1">
            <separator
                  name="group1">
            </separator>
         </menu>
         <action
               class="action.Q7_GoalModel"
               icon="icons/goal.gif"
               id="GoalModelAction"
               label="Goal Model"
               menubarPath="menu1/group1"
               tooltip="goal model">
         </action>         
      </objectContribution>
      <objectContribution
            objectClass="org.eclipse.core.resources.IFile"
            nameFilter="*.goalmodel"
            id="goalmodel">
         <menu
               label="Reasoning the Goal Model"
               path="additions"
               id="object">
            <separator
                  name="reasoning">
            </separator>
         </menu>
         <action
               class="action.ReasoningAction"
               icon="icons/goal.gif"
               id="ReasoningAction"
               label="with SAT solver"
               menubarPath="object/reasoning"
               tooltip="top down reasoning">
         </action>         
      </objectContribution>
   </extension>
</plugin>
