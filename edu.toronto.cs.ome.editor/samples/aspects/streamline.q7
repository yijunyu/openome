/**
 * Yu et al. From Goals to Aspects. RE'04.
 */
speed { &
  powerful
  streamline { &
    constant
    narrowing
    widening
  } => ++beauty
}
<car>::design { &
  design [engine] => ++powerful
  design [shape] { &
    design [body] => ++constant
    design [head] => ++widening
    design [tail] => ++narrowing
  } => ++streamline
  design [wheels]
}
