		<!-- compile the source code -->
		<javac destdir="${temp.folder}/ome4eclipse.jar.bin" failonerror="${javacFailOnError}" verbose="${javacVerbose}" debug="${javacDebugInfo}" includeAntRuntime="no" bootclasspath="${bundleBootClasspath}" source="${bundleJavacSource}" target="${bundleJavacTarget}"		>
			<compilerarg line="${compilerArg}"/>
			<classpath refid="ome4eclipse.jar.classpath" />
			<src path="src"			/>
		</javac>
		<!-- Copy necessary resources -->
		<copy todir="${temp.folder}/ome4eclipse.jar.bin" failonerror="true" overwrite="false">
			<fileset dir="src" excludes="**/*.java, **/package.htm*,null"			/>
		</copy>
		<mkdir dir="${build.result.folder}"/>
		<jar destfile="${build.result.folder}/ome4eclipse.jar" basedir="${temp.folder}/ome4eclipse.jar.bin"/>
		<delete dir="${temp.folder}/ome4eclipse.jar.bin"/>
