	<target name="ome4eclipsesrc.zip" depends="init" unless="ome4eclipsesrc.zip">
		<mkdir dir="${build.result.folder}"/>
		<zip destfile="${build.result.folder}/ome4eclipsesrc.zip" filesonly="false" whenempty="skip" update="false">
			<fileset dir="src" includes="**/*.java"			/>
		</zip>
	</target>

	<target name="build.jars" depends="init" description="Build all the jars for the plug-in: edu.toronto.cs.ome.eclipse.">
		<available property="ome4eclipse.jar" file="${build.result.folder}/ome4eclipse.jar"/>
		<antcall target="ome4eclipse.jar"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="ome4eclipsesrc.zip" file="${build.result.folder}/ome4eclipsesrc.zip"/>
		<antcall target="ome4eclipsesrc.zip"/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/edu.toronto.cs.ome.eclipse_0.0.14"/>
		<copy todir="${destination.temp.folder}/edu.toronto.cs.ome.eclipse_0.0.14" failonerror="true" overwrite="false">
			<fileset dir="${build.result.folder}" includes="ome4eclipse.jar"			/>
		</copy>
		<copy todir="${destination.temp.folder}/edu.toronto.cs.ome.eclipse_0.0.14" failonerror="true" overwrite="false">
			<fileset dir="${basedir}" includes="plugin.xml,ome4eclipse.jar,icons/,lib/,bin/edu/toronto/cs/ome/eclipse/pluginResources.properties,license.html,ome4eclipse.license.html,about.html,html/,META-INFMANIFEST.MF,help.xml,plugin_customization.ini,helpToc.xml,eclipse.gif,eclipse32.gif,eclipse_lg.gif,plugin.properties"			/>
		</copy>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/edu.toronto.cs.ome.eclipse_0.0.14"/>
		<copy file="${build.result.folder}/ome4eclipsesrc.zip" todir="${destination.temp.folder}/edu.toronto.cs.ome.eclipse_0.0.14" failonerror="false" overwrite="false"/>
		<copy todir="${destination.temp.folder}/edu.toronto.cs.ome.eclipse_0.0.14" failonerror="false" overwrite="false">
			<fileset dir="${basedir}" includes="src/,license.html,ome4eclipse.license.html,about.html,plugin.xml,icons/,html/source.ome4eclipse.jar = src/"			/>
		</copy>
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/edu.toronto.cs.ome.eclipse_0.0.14"/>
		<copy file="${temp.folder}/ome4eclipse.jar.bin.log" todir="${destination.temp.folder}/edu.toronto.cs.ome.eclipse_0.0.14" failonerror="false" overwrite="false"/>
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: edu.toronto.cs.ome.eclipse of all the zips, jars and logs created.">
		<delete file="${build.result.folder}/ome4eclipse.jar"/>
		<delete file="${build.result.folder}/ome4eclipsesrc.zip"/>
		<delete file="${plugin.destination}/edu.toronto.cs.ome.eclipse_0.0.14.jar"/>
		<delete file="${plugin.destination}/edu.toronto.cs.ome.eclipse_0.0.14.zip"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.convertPath fileSystemPath="C:/workspaces/openome-sdk/edu.toronto.cs.ome.editor" property="resourcePath"/>
		<eclipse.refreshLocal resource="${resourcePath}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init" description="Create a zip containing all the elements for the plug-in: edu.toronto.cs.ome.eclipse.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}" includes="**/*.bin.log"			/>
		</delete>
		<zip destfile="${plugin.destination}/edu.toronto.cs.ome.eclipse_0.0.14.zip" basedir="${temp.folder}" filesonly="true" whenempty="skip" update="false"/>
		<delete dir="${temp.folder}"/>
	</target>

