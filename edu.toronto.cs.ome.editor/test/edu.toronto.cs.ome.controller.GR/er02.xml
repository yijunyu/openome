<?xml version="1.0" encoding="UTF-8"?>
<model xmlns="http://www.cs.toronto.edu/~yijun/requirements"  xmlns:req="http://www.cs.toronto.edu/~yijun/requirements">
 <goal name="Japanese interest rate rise">
  <rule op="+" to="Yen rises" />
  <rule op="-" to="lower Jap. interest rates" />
 </goal>
 <goal name="US gas price rises">
  <rule op="+" to="gas price rises" />
 </goal>
 <goal name="improve car quality">
  <rule op="+" to="increase customer loyalty" />
 </goal>
 <goal name="Japanese gas price rises">
  <rule op="+" to="gas price rises" />
 </goal>
 <soft name="Yen rises">
  <rule op="-" to="Japanese gas price rises" />
 </soft>
 <soft name="gas price rises">
  <rule op="-" to="lower gas price" />
 </soft>
 <goal name="improve car services">
  <rule op="+" to="increase customer loyalty" />
 </goal>
 <goal name="increase Toyota sales">
  <rule op="-" to="increase VW sales" />
 </goal>
 <soft name="increase VW sales">
  <rule op="-" to="increase sales volume" />
 </soft>
 <soft name="increase customer loyalty">
  <rule op="+" to="increase sales volume" />
 </soft>
 <goal name="increase return on investment (GM)">
  <rule op="AND"/>
  <goal name="increase profit per vehicle">
   <rule op="OR"/>
   <goal name="increase foreign earnings" value="-0.5" />
   <goal name="increase high margin sales" value="-0.5" />
   <goal name="increase sales price" value="-0.5">
    <rule op="+" to="improve car services" />
    <rule op="BREAK" to="lower sales price" />
    <rule op="-" to="increase customer loyalty" />
   </goal>
   <goal name="lower production costs">
    <rule op="AND"/>
    <goal name="improve economies of production">
     <rule op="OR"/>
     <goal name="outsource units of production" />
     <goal name="reduce raw materials costs" />
    </goal>
    <goal name="keep labour costs low" value="-0.5" />
   </goal>
  </goal>
  <soft name="increase sales volume">
   <rule op="OR"/>
   <goal name="expand markets" />
   <goal name="increase consumer appeal">
    <rule op="OR"/>
    <goal name="lower environment impact">
     <rule op="+" to="increase customer loyalty" />
    </goal>
    <goal name="lower purchase costs">
     <rule op="OR"/>
     <goal name="lower loan interest rates" />
     <soft name="lower sales price">
      <rule op="BREAK" to="increase sales price" />
     </soft>
     <goal name="offer rebates" />
    </goal>
    <goal name="reducing operating costs">
     <rule op="OR"/>
     <goal name="improve mileage" />
     <soft name="lower gas price" />
    </goal>
   </goal>
   <rule op="-" to="increase Toyota sales" />
  </soft>
 </goal>
 <soft name="lower Jap. interest rates">
  <rule op="+" to="lower sales price" />
 </soft>
</model>
